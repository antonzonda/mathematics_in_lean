variable (a b c : α)

example : ¬a < a := by
  rw [lt_iff_le_not_le]
  by_contra h
  rcases h with ⟨h₁, h₂⟩
  contradiction

example : a < b → b < c → a < c := by
  simp only [lt_iff_le_not_le]
  rintro ⟨h₁, _⟩ ⟨h₃, h₄⟩
  constructor
  · apply le_trans h₁ h₃
  contrapose! h₄
  apply le_trans h₄ h₁

