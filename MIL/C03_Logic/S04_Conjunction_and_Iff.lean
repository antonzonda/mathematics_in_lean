theorem aux {x y : ℝ} (h : x ^ 2 + y ^ 2 = 0) : x = 0 :=
  have h' : x ^ 2 = 0 := by
    apply le_antisymm
    · have h₁ : x ^ 2 = - y ^ 2 := by linarith
      rw [h₁]
      norm_num
      apply pow_two_nonneg
    apply pow_two_nonneg
  pow_eq_zero h'

theorem aux1 {a b : ℝ} : a = 0 → b = 0 → a + b = 0 := by
  intro a0 b0
  rw [a0, b0]
  linarith

example (x y : ℝ) : x ^ 2 + y ^ 2 = 0 ↔ x = 0 ∧ y = 0 :=
  ⟨fun h₀ ↦ ⟨aux h₀ ,  @aux y x (by rw [add_comm] at h₀; exact h₀)⟩,
    fun ⟨h₁, h₂⟩ ↦ aux1 (sq_eq_zero_iff.mpr h₁) (sq_eq_zero_iff.mpr h₂)  ⟩

