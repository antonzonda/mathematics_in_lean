variable {α : Type*} [PartialOrder α]
variable (a b : α)

example : a < b ↔ a ≤ b ∧ a ≠ b := by
  rw [lt_iff_le_not_le]
  constructor
  · rintro ⟨h₁, h₂⟩
    constructor
    · exact h₁
    contrapose! h₂
    rw [h₂]
  rintro ⟨h₃, h₄⟩
  constructor
  · exact h₃
  contrapose! h₄
  apply le_antisymm h₃ h₄

end

